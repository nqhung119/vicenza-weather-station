generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SensorReading {
  id        Int      @id @default(autoincrement())
  tempRoom  Float    @map("temp_room")
  humRoom   Float    @map("hum_room")
  tempOut   Float    @map("temp_out")
  lux       Float
  ldrRaw    Int      @map("ldr_raw")
  timestamp DateTime @default(now())
  createdAt DateTime @default(now()) @map("created_at")

  @@map("sensor_readings")
}
